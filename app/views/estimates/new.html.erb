<%# <%= link_to "PDFを表示", estimates_path(format: "pdf") %> %>
<div class="estimates-form">
  <%= form_with model: @estimate_product, url: estimates_path(format: "pdf"), local: true do |f| %>
    <div class="form-text">見積番号</div>
    <%= f.text_field :estimate_number %>
    <div class="form-text">見積日</div>
    <%= f.text_field :estimate_date, value: Date.today %>
    <div class="form-text">会社名</div>
    <%= f.text_field :company_name %>
    <div class="form-text">見積金額</div>
    <%= f.text_field :total_price %>
    <div class="form-text">見積項目</div>
    <%= f.text_field :ancestry %>
    <div class="form-text">数量</div>
    <%= f.text_field :quantity %>
    <div class="form-btn">
      <%= f.submit 'PDF作成' %>
    </div>
  <% end %>
</div>